{
  "manifest_version": 2,
  "name": "Babbel - Hide Translations",
  "version": "1.0.0",

  "browser_specific_settings": {
    "gecko": {
      "id": "{7346791f-3c3d-4818-a5f5-4adec0e8a1d7}",
      "strict_min_version": "108.0"
    }
  },

  "description": "Hides translation text in Babbel",
  "icons": {
    "48": "icon.svg"
  },

  "permissions": ["https://my.babbel.com/*/lesson-player/*", "storage"],

  "content_scripts": [
    {
      "matches": ["https://my.babbel.com/*/lesson-player/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
