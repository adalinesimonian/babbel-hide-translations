{
  "manifest_version": 3,
  "name": "Babbel - Hide Translations",
  "version": "2.0.0",

  "browser_specific_settings": {
    "gecko": {
      "id": "{7346791f-3c3d-4818-a5f5-4adec0e8a1d7}",
      "strict_min_version": "109.0"
    }
  },

  "description": "Hides translation text in Babbel",
  "icons": {
    "48": "icon.png"
  },

  "permissions": ["storage"],
  "host_permissions": ["https://my.babbel.com/*/lesson-player/*"],
  "web_accessible_resources": [
    {
      "resources": ["icon-hide.svg", "icon-show.svg"],
      "matches": ["https://my.babbel.com/*"]
    }
  ],

  "content_scripts": [
    {
      "matches": ["https://my.babbel.com/*/lesson-player/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
